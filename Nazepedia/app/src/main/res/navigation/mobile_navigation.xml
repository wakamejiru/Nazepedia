<?xml version="1.0" encoding="utf-8"?>
<!--Start UP時の画面及びフラグメントを指定する-->
<!--android:id : このnavigation全体を指すid-->
<!--startDestination: StartUp時どのフラグメントを起動するかを決める-->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_slideshow">
    <!-- android:name : フラグメントのクラス名を参照するところ-->
    <!-- android:label : メニューで表示される文字を指定する-->
    <!-- android:layout : どのレイアウトを使用するかを指す-->
    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.myapplication.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.myapplication.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.myapplication.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
</navigation>